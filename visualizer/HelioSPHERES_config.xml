<?xml version="1.0" encoding="UTF-8"?>
<!--Game Mode-->
<!--
Scene scale changed from 800 to 2000, this increases the size of the game area
If changed all of the position values for the fixed objects must be changed
-->
<scene scale="2000.0" tics="500">
  <light x="0" y="1000" z="0"/>
  
  <!-- Test volume boundaries in the positive direction in meters (assumed symmetric) -->
  <bounds x="1.0" y="0.84" z="0.85"/>
<!--
Camera distanced changed from 1500 to 2500 in order to view the entire game area without zooming out
-->
  <camera pitch="90.0" yaw="270.0" distance="4000"/>
<!--
Wall layout type sphere
-->
  <walls type="sphere" radius="8000">
	<surface image="images/p15.jpg"/>
	<surface1 image="images/p11.jpg"/>
	<surface2 image="images/p12.jpg"/>
	<surface3 image="images/p13.jpg"/>
	<surface4 image="images/p15.jpg"/>
	<surface5 image="images/p11.jpg"/>
	<surface6 color="0x0f0f00"/>
  </walls>
  
<!-- Define the game -->
<game name="HelioSPHERES"/>
<!--
Two dynamic SPHERE dae objects, scaled at 12 instead of 10 to appear larger
-->
<!--blue sphere-->
  <visobject id="s1" type="asobject" class="SphereSat" scale="1200" basequat="0.707, 0, 0.707,0">
    <surface name="SatTexture" image="images/bluesph.png"/>
  </visobject>
<!--red sphere-->
  <visobject id="s2" type="asobject" class="SphereSat" scale="1200" basequat="0.707, 0, 0.707,0">
    <surface name="SatTexture" image="images/redsph.png"/>
  </visobject>
<!--
Static dae objects with a fixed position
-->

<!--panel1-->
<visobject id= "panel1" type="asobject" class="SolarPanelModel" scale="100" 
		basequat="0,0,-0.707,0.707"
		initial_x="0.7"
		initial_y="0"
		initial_z="0.0">
		<surface name="SolarPanel" image="images/solar_panel.jpg"/>
</visobject>

<!--panel2-->
<visobject id= "panel2" type="asobject" class="SolarPanelModel" scale="100"
		basequat="0,0,-0.707,0.707"
		initial_x="-0.7"
		initial_y="0"
		initial_z="0.0">
		<surface name="SolarPanel" image="images/solar_panel.jpg"/>
</visobject>
<visobject id= "station1" type="asobject" class="Station" scale="100"
         initial_x="-0.7"
         initial_y="0.0"
         initial_z="0.5"
		 basequat="-0.5, -0.5, -0.5, 0.5">
    <surface name="Material_003" color="0x00FF00" ambient="0x0000CD"/>

</visobject>
<visobject id= "station2" type="asobject" class="Station" scale="100"
         initial_x="0.7"
         initial_y="0.0"
         initial_z="-0.5"
		 basequat="0.5, -0.5, 0.5, 0.5">
    <surface name="Material_002" color="0xFF8000" ambient="0xFF0000"/>

</visobject>
<visobject id= "sun" type="asobject" class="Sun" scale="100"
         initial_x="0"
         initial_y="0.0"
         initial_z="0">
    <surface name="Material_004" color="0xFCD116" ambient="0xFFFF00"/>

</visobject>


 </scene>


