	<back image="images/itemB0.png"/>
	<left image="images/itemB0.png"/>
	<right image="images/itemB0.png"/>
  </visobject>
  
  <visobject id="item3" type="cube" x="100" y="100" z="100" initial_x="0" initial_y="0" initial_z="0" scale="2">
